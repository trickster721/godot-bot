{
	"$schema": "https://developers.reddit.com/schema/config-file.v1.json",
	"name": "godot-bot",
	"server": {
		"dir": "dist/server",
		"entry": "index.cjs"
	},
	"menu": {
		"items": [
			{
				"label": "trigger blog check",
				"description": "(for debug)",
				"location": "subreddit",
				"forUserType": "moderator",
				"endpoint": "/internal/scheduler/check-for-blog-post"
			},
			{
				"label": "Set Blog #1 (News)",
				"location": "post",
				"forUserType": "moderator",
				"endpoint": "/internal/menu/replace_blog_post_1"
			},
			{
				"label": "Set Blog #2 (Godot 4)",
				"location": "post",
				"forUserType": "moderator",
				"endpoint": "/internal/menu/replace_blog_post_2"
			},
			{
				"label": "Set Blog #3 (Godot 3)",
				"location": "post",
				"forUserType": "moderator",
				"endpoint": "/internal/menu/replace_blog_post_3"
			}
		]
	},
	"scheduler":
	{
		"tasks":
		{
			"check-for-blog-post":
			{
				"endpoint": "/internal/scheduler/check-for-blog-post",
				"cron": "0 */1 * * *"
			}
		}
	},
	"dev": {
		"subreddit": "godot_bot_dev"
	},
	"permissions": {
		"reddit": {
			"enable": true,
			"asUser": [
				"SUBMIT_POST",
				"SUBMIT_COMMENT"
			]
		},
		"http": {
			"enable": true,
			"domains": [
				"godotengine.org"
			]
		}
	},
	"settings": {
		"subreddit": {
			"flair_code": {
				"type": "string",
				"label": "flairId to use for posts",
				"defaultValue": ""
			}
		}
	}
}
