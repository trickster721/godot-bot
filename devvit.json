{
	"$schema": "https://developers.reddit.com/schema/config-file.v1.json",
	"name": "godot-bot",
	"server": {
		"dir": "dist/server",
		"entry": "index.cjs"
	},
	"menu": {
		"items": [
			{
				"label": "Fetch RSS posts now",
				"location": "subreddit",
				"forUserType": "moderator",
				"endpoint": "/internal/scheduler/fetch_rss_posts"
			},
			{
				"label": "Re-sticky RSS posts",
				"location": "subreddit",
				"forUserType": "moderator",
				"endpoint": "/internal/menu/sticky_rss_posts"
			},
			{
				"label": "Assign RSS slot...",
				"location": "post",
				"forUserType": "moderator",
				"endpoint": "/internal/menu/override_rss_post"
			},
			{
				"label": "Remove from RSS slot",
				"location": "post",
				"forUserType": "moderator",
				"endpoint": "/internal/menu/clear_rss_post"
			}
		]
	},
	"scheduler":
	{
		"tasks":
		{
			"check-for-blog-post":
			{
				"endpoint": "/internal/scheduler/fetch_rss_posts",
				"cron": "0 */1 * * *"
			}
		}
	},
	"dev": {
		"subreddit": "godot_bot_dev"
	},
	"permissions": {
		"reddit": {
			"enable": true,
			"asUser": [
				"SUBMIT_POST",
				"SUBMIT_COMMENT"
			]
		},
		"http": {
			"enable": true,
			"domains": [
				"godotengine.org"
			]
		}
	},
	"settings": {
		"subreddit": {
			"rss_enabled": {
				"type": "boolean",
				"label": "Enable RSS post fetching"
			},
			"rss_url": {
				"type": "string",
				"label": "RSS feed URL, from Reddit's approved list",
				"defaultValue": "https://godotengine.org/rss.xml"
			},
			"use_rss_slot_1": {
				"type": "boolean",
				"label": "Enable RSS post in slot 1"
			},
			"rss_category_slot_1": {
				"type": "string",
				"label": "With RSS category (Use | to seperate: Category One|Category Two|Category Three)",
				"placeholder": "Category One|Category Two|Category Three"
			},
			"rss_title_slot_1": {
				"type": "string",
				"label": "With partial RSS title (optional)"
			},
			"rss_flair_slot_1": {
				"type": "string",
				"label": "flairID code (optional)",
				"placeholder": "abcd1234-abcd-1234-abcd-1234abcd1234"
			},
			"rss_flair_text_slot_1": {
				"type": "string",
				"label": "Flair text (optional)"
			},
			"use_rss_slot_2": {
				"type": "boolean",
				"label": "Enable RSS post in slot 2"
			},
			"rss_category_slot_2": {
				"type": "string",
				"label": "RSS categories for slot 2",
				"placeholder": "Category One|Category Two|Category Three"
			},
			"rss_title_slot_2": {
				"type": "string",
				"label": "With partial RSS title (optional)"
			},
			"rss_flair_slot_2": {
				"type": "string",
				"label": "flairID code (optional)",
				"placeholder": "abcd1234-abcd-1234-abcd-1234abcd1234"
			},
			"rss_flair_text_slot_2": {
				"type": "string",
				"label": "Flair text (optional)"
			},
			"use_rss_slot_3": {
				"type": "boolean",
				"label": "Enable RSS post in slot 3"
			},
			"rss_category_slot_3": {
				"type": "string",
				"label": "RSS categories for slot 3",
				"placeholder": "Category One|Category Two|Category Three"
			},
			"rss_title_slot_3": {
				"type": "string",
				"label": "With partial RSS title (optional)"
			},
			"rss_flair_slot_3": {
				"type": "string",
				"label": "flairID code (optional)",
				"placeholder": "abcd1234-abcd-1234-abcd-1234abcd1234"
			},
			"rss_flair_text_slot_3": {
				"type": "string",
				"label": "Flair text (optional)"
			},
			"use_rss_slot_4": {
				"type": "boolean",
				"label": "Enable RSS post in slot 4"
			},
			"rss_category_slot_4": {
				"type": "string",
				"label": "RSS categories for slot 4",
				"placeholder": "Category One|Category Two|Category Three"
			},
			"rss_title_slot_4": {
				"type": "string",
				"label": "With partial RSS title (optional)"
			},
			"rss_flair_slot_4": {
				"type": "string",
				"label": "flairID code (optional)",
				"placeholder": "abcd1234-abcd-1234-abcd-1234abcd1234"
			},
			"rss_flair_text_slot_4": {
				"type": "string",
				"label": "Flair text (optional)"
			},
			"use_rss_slot_5": {
				"type": "boolean",
				"label": "Enable RSS post in slot 5"
			},
			"rss_category_slot_5": {
				"type": "string",
				"label": "RSS categories for slot 5",
				"placeholder": "Category One|Category Two|Category Three"
			},
			"rss_title_slot_5": {
				"type": "string",
				"label": "With partial RSS title (optional)"
			},
			"rss_flair_slot_5": {
				"type": "string",
				"label": "flairID code (optional)e",
				"placeholder": "abcd1234-abcd-1234-abcd-1234abcd1234"
			},
			"rss_flair_text_slot_5": {
				"type": "string",
				"label": "Flair text (optional)"
			},
			"use_rss_slot_6": {
				"type": "boolean",
				"label": "Enable RSS post in slot 6"
			},
			"rss_category_slot_6": {
				"type": "string",
				"label": "RSS categories for slot 6",
				"placeholder": "Category One|Category Two|Category Three"
			},
			"rss_title_slot_6": {
				"type": "string",
				"label": "With partial RSS title (optional)"
			},
			"rss_flair_slot_6": {
				"type": "string",
				"label": "flairID code (optional)",
				"placeholder": "abcd1234-abcd-1234-abcd-1234abcd1234"
			},
			"rss_flair_text_slot_6": {
				"type": "string",
				"label": "Flair text (optional)"
			}
		}
	},
	"forms": {
     "override_rss_post_submit": "/internal/form/override_rss_post_submit"
    }
}
